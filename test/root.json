{
    "id": "http://some.site.somewhere/entry-schema#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema for an fstab entry",
    "type": "object",
    "required": [
        "storage"
    ],
    "properties": {
        "storage": {
            "type": "object",
            "oneOf": [
                {
                    "$ref": "http://some.site.somewhere/entry-schema#/definitions/diskDevice"
                },
                {
                    "$ref": "http://some.site.somewhere/entry-schema#/definitions/nfs"
                }
            ]
        }
    }
}